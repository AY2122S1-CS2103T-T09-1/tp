<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.shape.SVGPath?>
<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
  <GridPane HBox.hgrow="ALWAYS" >

    <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" minWidth="10" />
    </columnConstraints>

    <VBox minHeight="125" styleClass="card" GridPane.columnIndex="0">

      <GridPane hgap="8" HBox.hgrow="ALWAYS">

      <columnConstraints>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="36" maxWidth="36"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="220"/>
        <ColumnConstraints hgrow="SOMETIMES" minWidth="10" />
      </columnConstraints>

      <padding>
        <Insets top="16" right="32" bottom="16" left="20" />
      </padding>

      <VBox GridPane.columnIndex="0" alignment="TOP_RIGHT" >
        <Label fx:id="id" styleClass="cell_big_label, cell_muted_label" textAlignment="RIGHT"/>
        <Region VBox.vgrow="ALWAYS" /> <!-- spacer -->

        <Label minWidth="20" maxWidth="20" minHeight="20" maxHeight="20" alignment="BASELINE_CENTER">
          <graphic>
            <SVGPath GridPane.halignment="LEFT" scaleX="0.03" scaleY="0.03" styleClass="svg_icon, cell_muted_label" content="M172.268 501.67C26.97 291.031 0 269.413 0 192 0 85.961 85.961 0 192 0s192 85.961 192 192c0 77.413-26.97 99.031-172.268 309.67-9.535 13.774-29.93 13.773-39.464 0zM192 272c44.183 0 80-35.817 80-80s-35.817-80-80-80-80 35.817-80 80 35.817 80 80 80z"/>
          </graphic>
        </Label>
        <Label minWidth="20" maxWidth="20" minHeight="20" maxHeight="20" alignment="BASELINE_CENTER">
          <graphic>
            <SVGPath GridPane.halignment="LEFT" scaleX="0.028" scaleY="0.028" styleClass="svg_icon, cell_muted_label" content="M256,8C119,8,8,119,8,256S119,504,256,504,504,393,504,256,393,8,256,8Zm92.49,313h0l-20,25a16,16,0,0,1-22.49,2.5h0l-67-49.72a40,40,0,0,1-15-31.23V112a16,16,0,0,1,16-16h32a16,16,0,0,1,16,16V256l58,42.5A16,16,0,0,1,348.49,321Z"/>
          </graphic>
        </Label>
      </VBox>

      <VBox spacing="4" alignment="TOP_LEFT" GridPane.columnIndex="1">
        <Label fx:id="name" text="\$first" styleClass="cell_big_label" wrapText="true"/>
        <FlowPane fx:id="tags" />
        <Label /> <!-- spacer -->
        <Label fx:id="address" styleClass="cell_small_label" text="\$address" />
        <Label fx:id="operatingHours" styleClass="cell_small_label" text="\$operatingHours" />
      </VBox>

      <VBox GridPane.columnIndex="2" alignment="TOP_RIGHT" >
        <HBox alignment="TOP_RIGHT" spacing="4">
          <HBox fx:id="icons" spacing="6"/>
        </HBox>
        <Region VBox.vgrow="ALWAYS" /> <!-- spacer -->
        <HBox spacing="4" alignment="CENTER_RIGHT">
          <Label fx:id="studiedHours" styleClass="cell_hour_digit_label"/>
          <Label fx:id="hoursText" styleClass="cell_hours_label, cell_muted_label" text="hours" />
        </HBox>
        <Label fx:id="rating" styleClass="icon_container, cell_small_label" text="\$rating" textAlignment="RIGHT" alignment="BOTTOM_RIGHT"/>
      </VBox>

      </GridPane>

    </VBox>
  </GridPane>

</HBox>
