<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.shape.Circle?>
<VBox fx:id="infoDisplay" alignment="CENTER" styleClass="info-display"
      xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <StackPane>
        <PieChart fx:id="infoDisplayChart" />
        <Circle styleClass="info-chart__donut-hole" radius="120.0" />
        <VBox mouseTransparent="true" alignment="CENTER">
            <Label text="5" styleClass="info-chart__hours"/>
            <Label text="HOURS STUDIED" styleClass="cell_muted_label, info-chart__hours-text"/>
        </VBox>
        <Label fx:id="caption" styleClass="info-chart__caption"/>
    </StackPane>
</VBox>
